# Configuración de FlowAgility Scraper
# =====================================

# Credenciales de acceso (OBLIGATORIAS)
FLOW_EMAILRQ=u4192984184@gmail.com
FLOW_PASSRQ=Seattle1$

# Configuración del navegador
HEADLESS=true
INCOGNITO=true

# Directorios de salida
OUT_DIR=./output

# Configuración de scraping
MAX_SCROLLS=12
SCROLL_WAIT_S=2.0
SLOW_MIN_S=1.0
SLOW_MAX_S=3.0

# Mostrar configuración al inicio
SHOW_CONFIG=true

# Opciones avanzadas (opcionales)
# CHROME_BINARY=/ruta/a/google-chrome
# CHROMEDRIVER_PATH=/ruta/a/chromedriver

LOG_CONSOLE_STYLE=pretty
LOG_CONSOLE_LEVEL=INFO
URL_MAXLEN=100
ROTATE_INPUT=false
ROTATE_OUTPUT=true

# Limite de analisis para pruebas
LIMIT_EVENTS=0
MAX_EVENTS_FOR_TESTING=0
LIMIT_PARTICIPANTS=0
UPCOMING_LIMIT=0

# Lento y amable
THROTTLE_EVENT_S=3.0
THROTTLE_PAGE_MIN_S=1.2
THROTTLE_PAGE_MAX_S=2.5
THROTTLE_TOGGLE_MIN_S=0.9
THROTTLE_TOGGLE_MAX_S=2.2
AUTO_SAVE_EVERY=10

PER_EVENT_MAX_S: "0"      # 0 = sin límite por evento (el script ya lo interpreta)
PER_PAGE_MAX_S=30
LIVEVIEW_READY_MAX_S=10
MAX_RUNTIME_MIN=0     # 0 = sin límite global (el job tiene timeout-minutes propio)

DEBUG_PARTICIPANTS: "0"   # producción

# Opcional: selectores/login si cambia el HTML
FLOW_BASE_URL=https://flowagility.com
FLOW_LOGIN_URL=https://flowagility.com/login
FLOW_SELECTOR_EMAIL=input[name='email']
FLOW_SELECTOR_PASSWORD=input[name='password']
FLOW_SELECTOR_LOGIN_BTN=button[type='submit']
FLOW_SELECTOR_LOGIN_CHECK=a[href*='/logout']

FLOW_SELECTOR_PARTS_TABLE=table
FLOW_SELECTOR_PARTS_THEAD=thead tr th
FLOW_SELECTOR_PARTS_ROWS=tbody tr
FLOW_SELECTOR_PARTS_CELLS=td

FLOW_PARTS_URL_SUFFIX=/participants_list


# Opcional: si hay páginas enormes puedes limitar:
# MAX_PAGES: "0"          # 0 = todas

